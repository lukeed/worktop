{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "target": "esnext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext", "dom.iterable", "webworker"],
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "baseUrl": "./src",
    "paths": {
      "worktop": ["./router.d.ts", "./router.ts"],
      "worktop/cache": ["./cache.d.ts", "./cache.ts"],
      "worktop/request": ["./request.d.ts", "./request.ts"],
      "worktop/response": ["./response.d.ts", "./response.ts"],
      "worktop/kv": ["./kv.d.ts", "./kv.js"],
    }
  },
  "include": [
    "src/**/*",
    "types/**/*",
    "examples/workers/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
