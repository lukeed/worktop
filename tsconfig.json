{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext", "dom.iterable", "webworker"],
    "strictFunctionTypes": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "baseUrl": "./src",
    "checkJs": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
